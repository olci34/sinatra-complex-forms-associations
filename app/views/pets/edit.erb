<h1>Update Pet</h1>

<label>Edit Pet Name:</label>
<br>
<form action='/pets/<%=@pet.id%>' method="POST">
<input type="hidden" id="hidden" name="_method" value="PATCH">
<input type ="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">
<br><br>

<p>Select an existing pet or create a new one below.</p>

<br>
<h3>Existing Owners</h3>
<% @owners.each do |o|%>
<input type="radio" name="pet[owner_id]" id="<%= o.id %>" value="<%= o.id %>" <%='checked' if o.id == @pet.owner.id%>><%= o.name %><br>
<% end %>
<br>

<h3>New Owner</h3>
<input type="text" name="owner[name]" id="owner_name">
<br><br>

<input type="submit" value="Update Pet">
</form>
